<Window mc:Ignorable="d"
        x:Class="UnpassNotifierDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:UnpassNotifierDesktop"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="450" Title="UnpassNotifier" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ListView Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Height="40" Margin="5" Name="TemplateListView" VerticalAlignment="Top" />
            <ListView Grid.Column="0" Grid.Row="1" Margin="5" Name="WordFilesListView" VerticalAlignment="Stretch" />
            <ListView Grid.Column="1" Grid.Row="1" Margin="5" Name="ExcelFilesListView" VerticalAlignment="Stretch" />
            <ListView Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" DockPanel.Dock="Right" Margin="5"
                      Name="OutputFiles" MouseRightButtonDown="OutputFiles_OnMouseRightButtonDown" >
                <ListView.ContextMenu>
                    <ContextMenu Name="outputFilesContextMenu">
                        <MenuItem Header="Преобразовать в pdf" Click="ConvertToPDF" />
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </Grid>

        <Grid Grid.Row="1" VerticalAlignment="Bottom" Height="40" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Click="SelectShedulesBtn" Margin="5">Выбрать файлы графиков</Button>
            <Button Grid.Column="1" Click="SelectAttestationsBtn" Margin="5">Выбрать файлы аттестации</Button>
            <Button Grid.Column="2" Click="SelectTemplateBtn" Margin="5">Выбрать файл шаблона</Button>
            <Button Grid.Column="3" Click="RunBtn" Margin="5">Запустить</Button>
        </Grid>
    </Grid>
</Window>